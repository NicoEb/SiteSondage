@model SiteSondage.Models.ClassSondage
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PageSondage</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div>

        <h1 style="text-align:center;margin-top:3%">
            Votre Formulaire de sondage
        </h1>
        <form style="margin-left:35%; margin-top:5%" action="@Url.Action("CreationSondage")" method="get">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="question"><b>Question</b></label>
                    <input type="text" class="form-control" id="question" placeholder="Choix de réponse" value="@Model.Question" name="question">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="choix1"><b>Choix 1</b></label>
                    <input type="text" class="form-control" id="choix1" placeholder="Choix de réponse" value="@Model.Choix1"name="choix1">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="choix2"><b>Choix 2</b></label>
                    <input type="text" class="form-control" id="choix2" placeholder="Choix de réponse" value="@Model.Choix2"name="choix2">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="choix3"><b>Choix 3</b></label>
                    <input type="text" class="form-control" id="choix3" placeholder="Choix de réponse" value="@Model.Choix3"name="choix3">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="choix4"><b>Choix 4</b></label>
                    <input type="text" class="form-control" id="choix4" placeholder="Choix de reponse" value="@Model.Choix4"name="choix4">
                </div>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Choix Multiple</label>
            </div>

            <a href="@Url.Action("PageChoix")" style="margin-top:5%" type="button" class="btn btn-primary btn-lg">Crée Sondage</a>
        </form>

    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
