@model SiteSondage.Models.ClassResultat

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PageResultat</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div style="text-align:center;margin-top:5%">

        <h1>RESULTAT DU SONDAGE</h1>

    </div>

    <div style="text-align:center;margin-top:3%">
        <b>
            @if (Model.Vote.ChoixMultiple == false)
            {
                <span>INFO : sondage à choix unique</span>
            }
            else
            {
                <span>INFO : sondage à choix multiple</span>
            }

        </b>
        <b> et nombre de Votants : </b><b>@Model.NombreDevotant</b>
    </div>
    <div style="text-align: center;margin-top:3%">
        <b> Question du sondage : @Model.Vote.Question</b>
    </div>

    <div style="text-align:center">
        <b style="margin-right:1%">@Model.Vote.Choix1 :</b> <progress style="margin-top:5%" value="@Model.PoucentageChoix1" max="100"></progress>   <b>@Model.PoucentageChoix1 %</b><b style="margin-left:1%">Nombre de vote : @Model.ResultatChoix1</b><br />
        <b style="margin-right:1%">@Model.Vote.Choix2 :</b> <progress style="margin-top:3%" value="@Model.PoucentageChoix2" max="100"></progress>   <b>@Model.PoucentageChoix2 %</b><b style="margin-left:1%">Nombre de vote : @Model.ResultatChoix2</b><br />
        <b style="margin-right:1%">@Model.Vote.Choix3 :</b> <progress style="margin-top:3%" value="@Model.PoucentageChoix3" max="100"></progress>   <b>@Model.PoucentageChoix3 %</b><b style="margin-left:1%">Nombre de vote : @Model.ResultatChoix3</b><br />
        <b style="margin-right:1%">@Model.Vote.Choix4 :</b> <progress style="margin-top:3%" value="@Model.PoucentageChoix4" max="100"></progress>   <b>@Model.PoucentageChoix4 %</b><b style="margin-left:1%">Nombre de vote : @Model.ResultatChoix4</b><br />
    </div>

    <div style="text-align:right">
        <a style="margin-top:20px;margin-right:100px" href="@Url.Action("PageChoix",new { idSondage = Model.Vote.IdSondage, numeroSecurite = Model.Vote.NumeroSecurite }))" type="button" class="btn btn-danger btn-lg">retour vers choix</a>
        <input type="hidden" name="idSondage" value="@Model.Vote.IdSondage" />
        <input type="hidden" name="numeroSecurite" value="@Model.Vote.NumeroSecurite" />
    </div>




    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
